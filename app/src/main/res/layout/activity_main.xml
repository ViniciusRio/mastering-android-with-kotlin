<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Toast"
        app:layout_constraintStart_toStartOf="@+id/etText"
        app:layout_constraintTop_toBottomOf="@+id/etText" />

    <Button
        android:id="@+id/btCallIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btToast"
        app:layout_constraintTop_toTopOf="@id/btToast"
        app:layout_constraintBottom_toBottomOf="@id/btToast"/>

    <Button
        android:id="@+id/btParcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="Parcel"
        app:layout_constraintStart_toStartOf="@id/btToast"
        app:layout_constraintTop_toBottomOf="@id/btCallIntent" />

    <Button
        android:id="@+id/btSerializable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Serializable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btParcel"
        app:layout_constraintTop_toTopOf="@id/btParcel"
        app:layout_constraintBottom_toBottomOf="@id/btParcel" />

    <Button
        android:id="@+id/btParceler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Parceler"
        app:layout_constraintStart_toStartOf="@id/btParcel"
        app:layout_constraintTop_toBottomOf="@id/btParcel" />

    <Button
        android:id="@+id/btParcelize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Parcelize"
        app:layout_constraintStart_toStartOf="@id/btParceler"
        app:layout_constraintTop_toBottomOf="@id/btParceler" />




</androidx.constraintlayout.widget.ConstraintLayout>